@model HostelProject.ViewModels.AdminViewModels.DataBaseViewModels.ViolationsAndIncentiveViewModel
@{
    ViewBag.Title = "Edit ViolationsAndIncentive";
}

@section Menu {
    <a asp-controller="ViolationsAndIncentive" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Edit ViolationsAndIncentive
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        @Model.Name
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Edit" asp-controller="ViolationsAndIncentive" asp-route-id="@Model.Id">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <label asp-for="Id" class="control-label a-list-custom item-left">Id</label>
                        <a><br>@Model.Id</a>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label a-list-custom item-left">Name</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Score" class="control-label a-list-custom item-left">Score</label>
                        <input type="number" asp-for="Score" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-sm btn-custom item-left" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>