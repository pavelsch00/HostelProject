@model HostelProject.ViewModels.AdminViewModels.DataBaseViewModels.ViolationsAndIncentivesStudentViewModel
@{
    ViewBag.Title = "Edit ViolationsAndIncentivesStudent";
}

@section Menu {
    <a asp-controller="ViolationsAndIncentivesStudent" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}


<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        ViolationsAndIncentivesStudent id @Model.Id change
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Edit" asp-controller="ViolationsAndIncentivesStudent" asp-route-id="@Model.Id">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <label asp-for="Id" class="control-label a-list-custom item-left">Id</label>
                        <a><br>@Model.Id</a>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentId" class="control-label a-list-custom item-left">StudentId</label>
                        <select type="number" asp-for="StudentId" class="form-control">
                            @if (@Model.ListStudentId != null)
                            {
                                @foreach (var item in Model.ListStudentId)
                                {
                                    <option>@item</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ViolationsAndIncentivesId" class="control-label a-list-custom item-left">ViolationsAndIncentivesId</label>
                        <select type="number" asp-for="ViolationsAndIncentivesId" class="form-control">
                            @if (@Model.ListViolationsAndIncentivesId != null)
                            {
                                @foreach (var item in Model.ListViolationsAndIncentivesId)
                                {
                                    <option>@item</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-sm btn-custom item-left" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>