@model HostelProject.ViewModels.AdminViewModels.RoleViewModel

@section Menu {
    <a asp-controller="Role" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Creating a new role
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Create" asp-controller="Role" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group margin-bottom-custom">
                        <label asp-for="Name" class="item-left login-a-custom" for="name">Role name</label>
                        <input type="text" asp-for="Name" name="name" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-sm btn-custom item-left">Add</button>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>
