@model HostelProject.ViewModels.MentorViewModels.ChangePositionViewModel
@{
    ViewBag.Title = "Create";
}

@section Menu {
    <a asp-controller="HostelMentor" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Change position
                    </a>
                </h2>
            </div>
            <form asp-action="Edit" asp-controller="ViolationsAndIncentivesStudentList">
                <div class="form-group">
                    <label asp-for="PositionId" class="control-label item-left">Position</label>
                    <select type="number" asp-for="PositionId" class="form-control">
                        @if (@Model.PositionList != null)
                        {
                            @foreach (var item in Model.PositionList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-sm btn-custom item-left" />
                </div>
            </form>
        </div>

        <div class="col-4"></div>
    </div>
</div>