@model HostelProject.ViewModels.AdminViewModels.DataBaseViewModels.SpecialtyViewModel
@{
    ViewBag.Title = "Edit Specialty";
}

@section Menu {
    <a asp-controller="Specialty" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Specialty @Model.Name change
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Edit" asp-controller="Specialty" asp-route-id="@Model.Id">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <label asp-for="Id" class="control-label a-list-custom item-left">Id</label>
                        <a><br>@Model.Id</a>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label a-list-custom item-left">Name</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FacultyId" class="control-label a-list-custom item-left">FacultyId</label>
                        <select type="number" asp-for="FacultyId" class="form-control">
                            @if (@Model.ListFacultyId != null)
                            {
                                @foreach (var item in Model.ListFacultyId)
                                {
                                    <option>@item</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-sm btn-custom" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>