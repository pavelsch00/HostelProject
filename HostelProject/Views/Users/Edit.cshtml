@model HostelProject.ViewModels.AdminViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit user";
}

@section Menu {
    <a asp-controller="Users" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm div-centr">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Edit user
                    </a>
                </h2>
            </div>

            <form asp-action="Edit" asp-controller="Users">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="login-a-custom item-left">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="login-a-custom item-left">UserName</label>
                    <input type="text" asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-custom item-left" />
                </div>
            </form>

        </div>
        <div class="col-sm">
        </div>
    </div>

</div>