@model HostelProject.ViewModels.AdminViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Create user";
}

@section Menu {
    <a asp-controller="Users" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Creating a new user
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Create" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label item-left">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label item-left">Username</label>
                        <input type="text" asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label item-left">Pasword</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-custom item-left" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>