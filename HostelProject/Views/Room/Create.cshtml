@model HostelProject.ViewModels.AdminViewModels.DataBaseViewModels.RoomViewModel
@{
    ViewBag.Title = "Create";
}

@section Menu {
    <a asp-controller="Room" class="btn btn-sm btn-custom" asp-action="Index">Back</a>
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4 text-center">
            <div class="margin-bottom-custom">
                <h2>
                    <a class="h2-custom">
                        Creating a new Room
                    </a>
                </h2>
            </div>
            <div class="margin-bottom-custom">
                <form asp-action="Create" asp-controller="Room">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FloorNumber" class="control-label a-list-custom item-left">FloorNumber</label>
                        <input type="number" asp-for="FloorNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="BlockNumber" class="control-label a-list-custom item-left">BlockNumber</label>
                        <input type="number" asp-for="BlockNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomNumber" class="control-label a-list-custom item-left">RoomNumber</label>
                        <input type="number" asp-for="RoomNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-custom item-left" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-4"></div>
    </div>
</div>